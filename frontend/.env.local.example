# AION 2 능력치 시스템 환경 변수 설정

# 개발 모드 설정
NEXT_PUBLIC_DEBUG_STATS=true
NEXT_PUBLIC_AUTO_VALIDATE_STATS=true
NEXT_PUBLIC_STATS_LOG_LEVEL=info
NEXT_PUBLIC_SHOW_COMPARISON=true

# API 검증 설정
NEXT_PUBLIC_STATS_CACHE_DURATION=300000
NEXT_PUBLIC_VALIDATION_RETRY_COUNT=3
NEXT_PUBLIC_ENABLE_STAT_WARNINGS=true

# 디버그 설정
NEXT_PUBLIC_DEBUG_PARSING=false
NEXT_PUBLIC_DEBUG_CALCULATION=false
NEXT_PUBLIC_DEBUG_API_CALLS=false

# 성능 설정
NEXT_PUBLIC_STATS_BATCH_SIZE=50
NEXT_PUBLIC_ENABLE_LAZY_LOADING=true